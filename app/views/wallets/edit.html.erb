<h1><%= t('wallet.editing') %> <%= @wallet.name %></h1>

<%= form_with(model: @wallet) do |form| %>
  <%= render 'form_errors', wallet: @wallet %>
  <div class="col-md-6">
    <%= form.label :port, class: 'form-label' %>
    <%= form.number_field :port, class: 'form-control', placeholder: t('wallet.placeholder.port') %>
  </div>
  <div class="col-md-6">
    <%= form.label :default_expiry_ttl, class: 'form-label' %>
    <%= form.number_field :default_expiry_ttl, class: 'form-control', placeholder: t('wallet.placeholder.default_expiry_ttl') %>
  </div>
  <div class="col-md-1">
    <%= form.submit class: 'btn btn-dark' %>
  </div>
<% end %>

<br>

<div>
  <%= link_to t('wallet.back'), wallets_path, class: 'link-dark' %>
</div>

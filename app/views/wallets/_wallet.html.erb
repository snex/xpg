<div id="<%= dom_id wallet %>" class="card col-lg-4">
  <div class="card-body">
    <h2 class="card-title">
      <%= link_to wallet.name, edit_wallet_path(wallet), class: 'link-dark' %>
    </h2>

    <p>
    <strong>Status:</strong>
    <span data-controller="wallet-status" data-wallet-status-url-value="<%= status_wallet_path(wallet.id) %>" data-wallet-status-refresh-interval-value="5000">
      <span class="spinner-border spinner-border-sm" role="status" />
      </span>
    </p>

    <a class="link-dark" role="button" data-bs-toggle="collapse" data-bs-target="#detailsWallet<%= wallet.id %>">
      <%= fa_icon 'angle-down', text: 'Details' %>
    </a>
    <div id="detailsWallet<%= wallet.id %>" class="collapse">
      <p>
        <strong>Port:</strong>
        <%= wallet.port %>
      </p>
      <p>
        <strong><%= label(:wallet, :default_expiry_ttl) %>:</strong>
          <%= wallet.default_expiry_ttl %> minutes
        </p>
    </div>

  </div>
</div>
